<!-- /templates/customers/activate_account.liquid -->
<div class="container my-5">
  <h1 class="lead">Activate account</h1>
  <div class="row">
    {% form 'activate_customer_password' %}
      {% include 'form-error', form: form %}

      <div class="col-12">
        <label class="form-label" for="password">Password</label>
        <input type="password" name="customer[password]" class="form-control" />
      </div>

      <div class="col-12">
        <label class="form-label" for="password_confirmation">Password Confirmation</label>
        <input class="form-control" type="password" name="customer[password_confirmation]" />
      </div>

      <div class="col-12">
        <button class="btn btn-primary w-100 rounded-0" type="submit">Activate Account</button>
      </div>

      <p class="text-center">or</p>

      <div class="col-12">
        <input class="btn btn-primary w-100 rounded-0" type="submit"  name="decline" value="Decline Invitation">
      </div>

    {% endform %}
  </div>
</div>

