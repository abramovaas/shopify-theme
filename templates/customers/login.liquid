<!-- /templates/customers/login.liquid -->

<div class="container py-5 my-5">
  <div class="login-form">
    {% form 'customer_login' %}
      {% include 'form-error', form: form %}
      <h3>Customer Login</h3>

      <label for="emailAddress">Email Address</label>
      <input class="form-control rounded-0 my-2" type="email" name="customer[email]">

      <label for="password">Password</label>
      <input class="form-control rounded-0 my-2" type="password" name="customer[password]">

      <input type="submit" value="Sign In" class="btn btn-primary w-100 rounded-0">

    {% endform %}

    <a href="#recover" id="forgotPassword" class="text-center">Forgot your password?</a>
  </div>

  <div id="forgot_password_form" class="forgot-password-form d-none">
    {% form 'recover_customer_password' %}
      {% include 'form-error', form: form %}

      <div class="col-12">
        <label class="form-label" for="customer_email">Email Address</label>
        <input class="form-control" type="email" name="email" />
      </div>

      <input type="submit" value="Reset password" class="btn btn-secondary" />

    {% endform %}
  </div>
</div>